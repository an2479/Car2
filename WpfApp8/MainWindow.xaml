<Window x:Class="WpfApp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        FontSize = "18"
        FontFamily="Footlight MT Light"
        Background="#EEF7FC"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView Name="spCarId" SelectionChanged="ShowDetails" Background="#F6FBFD">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Car ID" DisplayMemberBinding="{Binding CarId}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel x:Name="DetailsName" Grid.Column="1" Margin="10">
            <TextBlock Text="Car Id:" FontSize="18"/>
            <TextBlock Text="Seats:" FontSize="18"/>
            <TextBlock Text="Is sport:" FontSize="18"/>
            <TextBlock Text="Price:" FontSize="18"/>
            <TextBlock Text="Color:" FontSize="18"/>
            <TextBlock Text="Manufactored date:" FontSize="18"/>
        </StackPanel>

        <StackPanel x:Name="mySp" Grid.Column="2" Margin="10">
            <TextBlock x:Name="carId"/>
            <TextBlock x:Name="seats"/>
            <TextBlock x:Name="isSport"/>
            <TextBlock x:Name="price"/>
            <TextBlock x:Name="color"/>
            <TextBlock x:Name="manufactoredDate"/>
        </StackPanel>
    </Grid>
</Window>
